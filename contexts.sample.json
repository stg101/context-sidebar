{
    "contexts" : [
        {   
            "title": "vscode",
            "match_url" : "Microsoft VS Code\\Code.exe",
            "content" : [ 
                {
                    "title" : "vim normal mode",
                    "commands": [
                        {"key": "h j k l", "description": "Basic moves"},
                        {"key": "n + basic_move", "description": "repeat n times move"},
                        {"key": "w", "description": "move word by word (start)"},
                        {"key": "b", "description": "move word by word backwards (start)"},
                        {"key": "e", "description": "move word by word (end)"},
                        {"key": "ge", "description": "move word by word backwards (end)"},
                        {"key": "gg", "description": "go to start of file"},
                        {"key": "G", "description": "go to end of file"},
                        {"key": "ctr + u", "description": "move up half screen"},
                        {"key": "ctr + d", "description": "move down half screen"},
                        {"key": "dd", "description": "remove and copy"},
                        {"key": "d + n", "description": "remove n lines"},
                        {"key": "p", "description": "paste"},
                        {"key": "ctr + [enter]", "description": "empty line below"}
                    ]
                },
                {
                    "title": "vscode",
                    "commands": [
                        {"key": "alt + arrow", "description": "switch terminals"}
                    ]
                }
            ]
        },
        {   
            "title": "console",
            "match_url" : "Microsoft.WindowsTerminal",
            "content" : [ 
                {
                    "title" : "tmux",
                    "commands": [
                        {"key": "pre + %", "description": "Split vertical"},
                        {"key": "pre + \"", "description": "Split horizontal"},
                        {"key": "pre + arrow", "description": "Switch panes"},
                        {"key": "pre + c", "description": "New window"},
                        {"key": "pre + [number]", "description": "Switch windows"},
                        {"key": "pre + ,", "description": "Rename windows"},
                        {"key": "pre + z", "description": "Zoom"},
                        {"key": "pre + x", "description": "Remove Panel"},
                        {"key": "pre + d", "description": "detach"}
                    ]
                },
                {
                    "title" : "terminal",
                    "commands": [
                        {"key": "ctrl + shift + [space]", "description": "Open Tab Dropdown"},
                        {"key": "ctrl + shift + d", "description": "Duplicate Tab"},
                        {"key": "ctrl + tab", "description": "Open Next Tab"},
                        {"key": "ctrl + shift + tab", "description": "Open Previous Tab"},
                        {"key": "ctrl + alt + [number]", "description": "Open a specific tab"},
                        {"key": "ctrl + shift + w", "description": "Close current tab"}
                    ]
                }
            ]
        },
        {   
            "title": "chrome",
            "match_url" : "chrome.exe",
            "content" : [ 
                {
                    "title" : "tabs",
                    "commands": [
                        {"key": "[ctr] + [tab]", "description": "switch tab to right"},
                        {"key": "[ctr] + [shift] + [tab]", "description": "switch tab to left"},
                        {"key": "[ctr] + [shift] + t", "description": "resurrect tab"},
                        {"key": "[ctr] + W", "description": "kill tab"},
                        {"key": "[ctr] + L", "description": "open search bar"},
                        {"key": "[ctr] + T", "description": "open new tab"},
                        {"key": "[ctr] + N", "description": "open new  window"}
                    ]
                }
            ]
        }
    ]
}